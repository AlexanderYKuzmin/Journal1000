<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="java.util.List"/>

        <variable
            name="viewModel"
            type="com.example.journal1000.presentation.GameViewModel" />
    </data>
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".presentation.GameSettingsFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_fragment_gradient">

            <TextView
                android:id="@+id/tv_p1_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="8sp"
                android:paddingBottom="8sp"
                android:paddingEnd="20dp"
                android:layout_marginStart="16dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/color_primary"
                android:drawableStart="@drawable/tip_placeholder"
                app:adjustName="@{viewModel.players[0].name}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_p2_name"
                tools:text="Алеша" />

            <ImageView
                android:id="@+id/iv_bolt"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="8dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/divider_h_0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/til_p1_auction"
                android:src="@drawable/screw_bolt"
                tools:visibility="visible"
                />
            <!--<TextView
                android:id="@+id/tv_p1_bolt_colon"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginBottom="2dp"
                app:layout_constraintTop_toBottomOf="@id/tv_p1_name"
                app:layout_constraintStart_toEndOf="@id/iv_bolt"
                app:layout_constraintBottom_toTopOf="@id/divider_h"
                android:text=":"/>-->
            <TextView
                android:id="@+id/tv_p1_bolt_count"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:paddingStart="4dp"
                android:textSize="16sp"
                android:layout_marginBottom="2dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/divider_h_0"
                app:layout_constraintStart_toEndOf="@id/iv_bolt"
                app:layout_constraintBottom_toTopOf="@id/til_p1_auction"
                tools:text=": 2"
                tools:visibility="visible"/>

            <ImageView
                android:id="@+id/iv_p1_barrel"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="2dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/divider_h_0"
                app:layout_constraintEnd_toStartOf="@id/tv_p1_barrel_count"
                app:layout_constraintBottom_toTopOf="@id/til_p1_auction"
                android:src="@drawable/barrel3"
                tools:visibility="visible"
                />
            <!--<TextView
                android:id="@+id/tv_p1_barrel_colon"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginBottom="2dp"
                app:layout_constraintTop_toBottomOf="@id/tv_p1_name"
                app:layout_constraintEnd_toStartOf="@id/tv_p1_barrel_count"
                app:layout_constraintBottom_toTopOf="@id/divider_h"
                android:text=":"/>-->
            <TextView
                android:id="@+id/tv_p1_barrel_count"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:paddingStart="4dp"
                android:textSize="16sp"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="12dp"
                android:text=": 0"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/divider_h_0"
                app:layout_constraintEnd_toStartOf="@id/divider_v1"
                app:layout_constraintBottom_toTopOf="@id/til_p1_auction"
                tools:text=": 2"
                tools:visibility="visible"/>

            <View
                android:id="@+id/divider_v1"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:background="@color/color_divider"
                app:layout_constraintStart_toEndOf="@+id/tv_p1_name"
                app:layout_constraintEnd_toStartOf="@+id/tv_p2_name"
                app:layout_constraintHorizontal_bias="0.33"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


            <TextView
                android:id="@+id/tv_p2_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="8sp"
                android:paddingBottom="8sp"
                android:paddingEnd="20dp"
                android:layout_marginStart="16dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/color_primary"
                android:drawableStart="@drawable/tip_placeholder"
                app:adjustName="@{viewModel.players[1].name}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_p1_name"
                app:layout_constraintEnd_toStartOf="@+id/tv_p3_name"
                tools:text="Аркаша" />

            <ImageView
                android:id="@+id/iv_p2_bolt"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="8dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/divider_h_0"
                app:layout_constraintStart_toStartOf="@id/divider_v1"
                app:layout_constraintBottom_toTopOf="@id/til_p2_auction"
                android:src="@drawable/screw_bolt"
                tools:visibility="visible"
                />
            <!--<TextView
                android:id="@+id/tv_p2_bolt_colon"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginBottom="2dp"
                app:layout_constraintTop_toBottomOf="@id/tv_p2_name"
                app:layout_constraintStart_toEndOf="@id/iv_p2_bolt"
                app:layout_constraintBottom_toTopOf="@id/divider_h"
                android:text=":"/>-->
            <TextView
                android:id="@+id/tv_p2_bolt_count"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:paddingStart="4dp"
                android:textSize="16sp"
                android:layout_marginBottom="2dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/divider_h_0"
                app:layout_constraintStart_toEndOf="@id/iv_p2_bolt"
                app:layout_constraintBottom_toTopOf="@id/til_p2_auction"
                tools:text=": 2"
                tools:visibility="visible"/>

            <ImageView
                android:id="@+id/iv_p2_barrel"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="2dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/divider_h_0"
                app:layout_constraintEnd_toStartOf="@id/tv_p2_barrel_count"
                app:layout_constraintBottom_toTopOf="@id/til_p2_auction"
                android:src="@drawable/barrel3"
                tools:visibility="visible"
                />
            <!--<TextView
                android:id="@+id/tv_p2_barrel_colon"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginBottom="2dp"
                app:layout_constraintTop_toBottomOf="@id/tv_p2_name"
                app:layout_constraintEnd_toStartOf="@id/tv_p2_barrel_count"
                app:layout_constraintBottom_toTopOf="@id/divider_h"
                android:text=":"/>-->
            <TextView
                android:id="@+id/tv_p2_barrel_count"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:paddingStart="4dp"
                android:textSize="16sp"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="12dp"
                android:text=": 0"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/divider_h_0"
                app:layout_constraintEnd_toStartOf="@id/divider_v2"
                app:layout_constraintBottom_toTopOf="@id/til_p2_auction"
                tools:visibility="visible"
                tools:text=": 2"/>
            <View
                android:id="@+id/divider_v2"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:background="@color/color_divider"
                app:layout_constraintHorizontal_bias="0.33"
                app:layout_constraintStart_toEndOf="@+id/tv_p2_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_p3_name"/>

            <TextView
                android:id="@+id/tv_p3_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="8sp"
                android:paddingBottom="8sp"
                android:paddingEnd="20dp"
                android:layout_marginStart="16dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/color_primary"
                android:drawableStart="@drawable/tip_placeholder"
                app:adjustName="@{viewModel.players[2].name}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_p2_name"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Павлик"
                />
            <ImageView
                android:id="@+id/iv_p3_bolt"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="8dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/divider_h_0"
                app:layout_constraintStart_toStartOf="@id/divider_v2"
                app:layout_constraintBottom_toTopOf="@id/til_p3_auction"
                android:src="@drawable/screw_bolt"
                tools:visibility="visible"
                />
            <!--<TextView
                android:id="@+id/tv_p3_bolt_colon"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginBottom="2dp"
                app:layout_constraintTop_toBottomOf="@id/tv_p3_name"
                app:layout_constraintStart_toEndOf="@id/iv_p3_bolt"
                app:layout_constraintBottom_toTopOf="@id/divider_h"
                android:text=":"/>-->
            <TextView
                android:id="@+id/tv_p3_bolt_count"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:paddingStart="4dp"
                android:textSize="16sp"
                android:visibility="gone"
                android:layout_marginBottom="2dp"
                app:layout_constraintTop_toBottomOf="@id/divider_h_0"
                app:layout_constraintStart_toEndOf="@id/iv_p3_bolt"
                app:layout_constraintBottom_toTopOf="@id/til_p3_auction"
                tools:text=": 2"
                tools:visibility="visible"/>

            <ImageView
                android:id="@+id/iv_p3_barrel"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="2dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/divider_h_0"
                app:layout_constraintEnd_toStartOf="@id/tv_p3_barrel_count"
                app:layout_constraintBottom_toTopOf="@id/til_p3_auction"
                android:src="@drawable/barrel3"
                tools:visibility="visible"
                />
            <!--<TextView
                android:id="@+id/tv_p3_barrel_colon"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginBottom="2dp"
                app:layout_constraintTop_toBottomOf="@id/tv_p3_name"
                app:layout_constraintEnd_toStartOf="@id/tv_p3_barrel_count"
                app:layout_constraintBottom_toTopOf="@id/divider_h"
                android:text=":"/>-->
            <TextView
                android:id="@+id/tv_p3_barrel_count"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:paddingStart="4dp"
                android:textSize="16sp"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="12dp"
                android:text=": 0"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/divider_h_0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/til_p3_auction"
                tools:text=": 2"
                tools:visibility="visible"/>

            <View
                android:id="@+id/divider_h_0"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="2dp"
                android:background="#CD6F6E73"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_p1_name" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_p1_auction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/request_hint"
                android:layout_margin="4dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintTop_toBottomOf="@id/iv_bolt"
                app:layout_constraintEnd_toStartOf="@id/divider_v1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/divider_h"
                android:visibility="invisible"
                tools:visibility="visible"
                >
                <AutoCompleteTextView
                    android:id="@+id/tv_p1_auction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/RequestPointsTextView"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_p2_auction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/request_hint"
                android:layout_margin="4dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintTop_toBottomOf="@id/iv_p2_bolt"
                app:layout_constraintEnd_toStartOf="@id/divider_v2"
                app:layout_constraintStart_toEndOf="@id/divider_v1"
                app:layout_constraintBottom_toTopOf="@id/divider_h"
                android:background="@android:color/transparent"
                android:visibility="invisible"
                tools:visibility="visible"
                >
                <AutoCompleteTextView
                    android:id="@+id/tv_p2_auction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/RequestPointsTextView"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_p3_auction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/request_hint"
                android:layout_margin="4dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintTop_toBottomOf="@id/iv_p3_bolt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/divider_v2"
                app:layout_constraintBottom_toTopOf="@id/divider_h"
                android:background="@android:color/transparent"
                android:visibility="invisible"
                tools:visibility="visible"
                >
                <AutoCompleteTextView
                    android:id="@+id/tv_p3_auction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/RequestPointsTextView"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:id="@+id/divider_h"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="2dp"
                android:background="@color/color_divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/til_p1_auction" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_score"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toTopOf="@id/tv_save_points"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider_h"
                tools:listitem="@layout/layout_game_list_item" />


            <TextView
                android:id="@+id/tv_save_points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_back_step"
                style="@style/BottombarPositionsForCentral"
                android:text="Записать очки"
                 />
            <TextView
                android:id="@+id/tv_back_step"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.2"
                style="@style/BottombarPositions"
                android:text="@string/cancel"
                android:drawableStart="@drawable/ic_baseline_settings_backup_restore_24"
                tools:visibility="visible"/>
            <TextView
                android:id="@+id/tv_auction"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.2"
                style="@style/BottombarPositions"
                android:text="@string/auction"
                android:drawableStart="@drawable/ic_auction"
                tools:visibility ="visible"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
</layout>
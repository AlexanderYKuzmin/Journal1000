<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/background_fragment_gradient">

        <TextView
            android:id="@+id/tv_title_finish"
            style="@style/TextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/title_finish"
            app:layout_constraintBottom_toTopOf="@+id/tv_game_count"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_game_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_finish"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/comediantdecor"
            android:text="@string/game_count"/>

        <TextView
            android:id="@+id/tv_p1_name_finish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/PlayerNameFinishGame"
            app:layout_constraintEnd_toStartOf="@id/tv_p1_count_finish"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_game_count"
            tools:text="Алеша:"/>
        <TextView
            android:id="@+id/tv_p1_count_finish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_p1_name_finish"
            app:layout_constraintTop_toBottomOf="@id/tv_game_count"
            app:layout_constraintBottom_toBottomOf="@id/tv_p1_name_finish"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center"
            tools:text="+500"
            tools:textColor="@android:color/holo_green_light"/>

        <TextView
            android:id="@+id/tv_p2_name_finish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/tv_p2_count_finish"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_p1_name_finish"
            style="@style/PlayerNameFinishGame"
            tools:text="Степан:"/>
        <TextView
            android:id="@+id/tv_p2_count_finish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_p2_name_finish"
            app:layout_constraintTop_toBottomOf="@id/tv_p1_count_finish"
            app:layout_constraintBottom_toBottomOf="@id/tv_p2_name_finish"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="-200"
            android:textAlignment="center"
            tools:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tv_p3_name_finish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/tv_p3_count_finish"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_p2_name_finish"
            style="@style/PlayerNameFinishGame"
            tools:text="Геннадий:"/>
        <TextView
            android:id="@+id/tv_p3_count_finish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_p3_name_finish"
            app:layout_constraintTop_toBottomOf="@id/tv_p2_count_finish"
            app:layout_constraintBottom_toBottomOf="@id/tv_p3_name_finish"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center"
            tools:text="-300"
            tools:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tv_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:text="Завершить"
            style="@style/TextViewButtonFragment"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
            android:drawablePadding="6dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_cancel"
            />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Вернуться"
            style="@style/TextViewButtonFragment"
            android:drawableStart="@drawable/ic_baseline_arrow_back_24"
            android:drawablePadding="6dp"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="156dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_p3_name_finish"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>